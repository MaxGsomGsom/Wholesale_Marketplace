@model Wholesale_Marketplace.Models.User
@using Wholesale_Marketplace.Models;
@{
    ViewBag.Title = "Регистрация";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4" >
        <div class="field-big">
            <h3><b>Регистрация</b></h3>
            <br/>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleID, "Тип учетной записи")
                    <br />
                    <select name="RoleID" class="form-control">
                        <option value="0">Покупатель</option>
                        <option value="1">Продавец</option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.Login, "Логин")
                    <br />
                    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Пароль")
                    <br />
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "E-mail")
                    <br />
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <br />
                <input type="submit" class="btn btn-primary" value="Зарегистрироваться" />

            }
        </div>
    </div>
</div>

