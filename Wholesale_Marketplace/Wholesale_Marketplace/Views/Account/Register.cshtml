@model Wholesale_Marketplace.Models.User
@using Wholesale_Marketplace.Models;
@{
    Layout = "~/Views/Shared/AnonimLayout.cshtml";
    ViewBag.Title = "Регистрация";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.RoleID, "Тип учетной записи")
                <select name="RoleID">
                    <option value="0">Покупатель</option>
                    <option value="1">Продавец</option>
                </select>
            </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Login, "Логин")
        <br />
        @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Пароль")
        <br />
        @Html.EditorFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "E-mail")
        <br />
        @Html.EditorFor(m => m.Email, new { @class = "form-control" })
    </div>
    <br />
        <input type="submit" value="Зарегистрироваться" />

        }
    </div>
</div>

