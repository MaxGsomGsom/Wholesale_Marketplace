@model Wholesale_Marketplace.Models.User
@using Wholesale_Marketplace.Models
@{
    ViewBag.Title = "Авторизация";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="field-big">
            <h3><b>Авторизация</b></h3>
            <br />
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Login, "Логин")
                    <br />
                    @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Пароль")
                    <br />
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                </div>
                <br />
                <input type="submit" class="btn btn-primary" value="Войти" />
            }
        </div>
    </div>
</div>
